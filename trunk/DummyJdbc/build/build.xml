<?xml version="1.0" encoding="UTF-8"?>
<project basedir="." default="compile" name="dummyjdbc">

	<property name="version" value="1.0"/>
	
	<property name="lib.dir" location="../lib" />

	<taskdef classpath="../lib/aspectjtools.jar" resource="org/aspectj/tools/ant/taskdefs/aspectjTaskdefs.properties" />

	<path id="build.classpath">
		<fileset dir="${lib.dir}">
			<include name="**/*.jar" />
		</fileset>
	</path>

	<target name="init">
		<tstamp />

		<property name="build" value="../bin/ant" />
		<property name="src" value="../src" />
		<property name="dist" value="${build}/dist" />
	</target>

	<target name="clean" depends="init">
		<delete dir="${build}" />
		<delete dir="${dist}" />
	</target>

	<target name="prepare" depends="init">
		<mkdir dir="${build}" />
		<mkdir dir="${build}/classes" />
		<mkdir dir="${build}/src" />

		<copy todir="${build}/src">
			<fileset dir="${src}" includes="**/*.java,**/*.aj" />
		</copy>
	</target>

	<target name="compile" depends="init,prepare">
		<iajc source="1.6" sourceroots="${build}/src" destdir="${build}/classes" encoding="latin1" classpathref="build.classpath" />
	</target>

	<target name="jar" depends="clean,compile">
		<mkdir dir="${dist}" />
		<jar basedir="${build}/classes" includes="**/*" jarfile="${dist}/${ant.project.name}-${version} .jar" />
	</target>

	<target name="jar-with-dependencies" depends="clean,compile">
		<mkdir dir="${dist}" />
		<jar basedir="${build}/classes" includes="**/*" jarfile="${dist}/${ant.project.name}-${version}-all.jar">
			<zipgroupfileset dir="${lib.dir}" includes="*.jar" />
		</jar>
	</target>

</project>
